{
    "name": "aetherlink/order-system",
    "description": "Modern PHP 8.4 Order Processing System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "AetherLink.AI Tech",
            "email": "dev@aetherlink.ai"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "pestphp/pest": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "analyse": "phpstan analyse src --level=9",
        "test": "pest"
    }
}

{
    "name": "aetherlink/toxic-order-processor-modernized",
    "description": "Modern PHP 8.4 transformation of legacy ToxicOrderProcessor_v2_FINAL.php",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.4",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test": "pest",
        "analyse": "phpstan analyse",
        "check": [
            "@analyse",
            "@test"
        ]
    }
}
